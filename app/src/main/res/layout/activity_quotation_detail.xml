<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/appBackgroundColor"
    tools:context=".quotation.subItem.quotation_detail.QuotationDetailActivity">

    <include layout="@layout/toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="@dimen/cardElevation"
                app:cardCornerRadius="@dimen/cardCornerRadius"
                android:layout_margin="@dimen/screen_content_spacing">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/screen_content_spacing">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Date -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:orientation="vertical">

                            <!-- Date -->
                            <androidx.appcompat.widget.AppCompatTextView
                                style="@style/CommonText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/hint_date" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvDate"
                                style="@style/CommonTextBlue"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="N/A" />

                        </LinearLayout>

                        <!-- Status -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:orientation="vertical">

                            <!-- Status -->
                            <androidx.appcompat.widget.AppCompatTextView
                                style="@style/CommonText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Status" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvStatus"
                                style="@style/CommonTextBlue"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="N/A" />

                        </LinearLayout>

                    </LinearLayout>


                    <!-- Quotation No-->
                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/CommonText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:text="@string/quotation_no" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvQuotationNo"
                        style="@style/CommonTextBlue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="N/A" />

                    <!-- Customer -->
                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/CommonText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:text="Customer" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvCustomer"
                        style="@style/CommonTextBlue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="N/A" />

                    <!-- Credit Term (No# of days) -->
                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/CommonText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:text="Credit Term (No# of days)"
                        android:visibility="visible"/>


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvCreditTermDays"
                        style="@style/CommonTextBlue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="N/A"
                        android:visibility="visible"/>


                   <!-- <androidx.appcompat.widget.AppCompatTextView
                        style="@style/CommonText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:text="Credit Term (No# of days)" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvCreditTerm"
                        style="@style/CommonTextBlue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="N/A" />-->

                    <!-- Corr. Address -->
                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/CommonText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:text="Corr. Address" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvCorrAddress"
                        style="@style/CommonTextBlue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="N/A" />


                    <!-- Deli. Address -->
                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/CommonText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:text="Deli. Address" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvDeliAddress"
                        style="@style/CommonTextBlue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="N/A" />

                    <!-- Upload Document -->
                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/CommonText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:text="Upload Document" />


                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/CommonTextBlue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/document"
                        android:drawablePadding="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="Document" />

                    <!-- Customer PO No. -->
                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/CommonText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:text="Customer PO No." />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvCustomerPoNo"
                        style="@style/CommonTextBlue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/_5sdp"
                        android:text="N/A" />

                    <!-- Description 1 -->
                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/CommonText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:text="@string/description_1" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvDescription1"
                        style="@style/CommonTextBlue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/_5sdp"
                        android:text="N/A" />

                    <!-- Description 2 -->
                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/CommonText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:text="@string/description_2" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvDescription2"
                        style="@style/CommonTextBlue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/_5sdp"
                        android:text="N/A" />

                    <!-- Select Currency  -->
                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/CommonText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:text="Select Currency" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvCurrency"
                        style="@style/CommonTextBlue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/_5sdp"
                        android:text="N/A" />

                    <!-- Total Amount  -->
                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/CommonText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:text="@string/hint_total_amount"/>


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvTotalAmount"
                        style="@style/CommonTextBlue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/_5sdp"
                        android:text="N/A" />


                    <!-- Main Item -->
                    <LinearLayout
                        android:id="@+id/llMainListCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:background="@drawable/full_rectangle"
                        android:gravity="center"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvMainItemCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(0) Main Item"
                            android:textColor="@color/colorWhite"
                            android:fontFamily="@font/montserrat_semibold"
                            android:textSize="@dimen/_12ssp"
                            android:layout_margin="@dimen/_8sdp"
                            android:gravity="center"/>

                    </LinearLayout>

                </LinearLayout>



            </androidx.cardview.widget.CardView>




        </LinearLayout>

    </ScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>